        <BuildDependencies>
            <Dependency type="pkgconfig">gdk-pixbuf-2.0</Dependency>
            <Dependency type="pkgconfig">epoxy</Dependency>
            <Dependency type="pkgconfig">gtk+-2.0</Dependency>
            <Dependency type="pkgconfig">atk</Dependency>
